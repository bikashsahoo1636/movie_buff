<html>

<h1> {{movie_title.movie_title}} </h1>

<div class= "castInfo">
    <h3>Details: </h3>
    <table class= "cast-info-table">
        <tr>
            <th>Cast: </th>
        </tr>
        <tr class="cast-info-table-body">
            {{#each cast}}
            <tr>
                <td>{{actorName}}</td>
            </tr>
            {{/each}}
        </tr>

    </table>
</div>

            


<br>

<div class= "movieInfo">

    <table class= "movie-info-table">
        <tr>
            <th>Movie Duration: </th>
            <th>Release Date: </th>
            <th>Language: </th>
            <th>Country: </th>
            <th>User Watched: </th>
        </tr>
        <tr class="movie-info-table-body">
            <tr>
                <td>{{movie.movie_duration}}</td>
                <td>{{movie.release_date}}</td>
                <td>{{movie.language}}</td>
                <td>{{movie.country}}</td>
                <td>{{movie.user_watched}}</td>
            </tr>
        </tr>
    </table>
</div>

<div class= "movieRatings">
    <h3>Reviews: </h3>
    <table class= "movie-ratings-table">
        <tr>
            <th>Score: </th>
            <th>Explanation </th>
        </tr>
        <tr class="movie-ratings-table-body">
            {{#each rating_entry}}
            <tr>
                <td>{{score}}</td>
                <td>{{explanation}}</td>
            </tr>
            {{/each}}
        </tr>
    </table>
</div>


</html>
