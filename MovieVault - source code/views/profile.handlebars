<html>

<h1> {{username.username}} ({{status}}) </h1>

<h3> <a href= "/add_rating" > CREATE Rating Entry </a> </h3>


<div class= "rating-container">
    <h3>My Rating Entries: </h3>
    <table class= "ratings-table">
        <tr>
            <th>Movie: </th>
            <th>Rating Given: </th>
            <th>Review Given</th>
            {{!-- <th>Options</th> --}}
        </tr>
        <tr class="ratings-table-body">
            {{#each rating_entry}}
            <tr>
                <td>{{movie_title}}</td>
                <td>{{rating_given}}</td>
                <td>{{review_given}}</td>
                {{!-- <td><button onclick="delete_rating({{ratingID}})">Delete</button><a class="update-button"href="/rating/{{ratingID}}">Update</a></td> --}}
                {{!-- <td></td> --}}
            </tr>
            {{/each}}
        </tr>
    </table>

</div>


</html>
